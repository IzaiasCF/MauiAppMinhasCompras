<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppMinhasCompras.Views.EditarProduto"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Descricao}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToolbarItem_Clicked" Text="Salvar" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Descrição do Produto:" />
        <Entry x:Name="txt_descricao" Text="{Binding Descricao}" />

        <Label Text="Quantidade:" />
        <Entry
            x:Name="txt_quantidade"
            Keyboard="Numeric"
            Text="{Binding Quantidade}" />

        <Label Text="Preço Unitário:" />
        <Entry
            x:Name="txt_preco"
            Keyboard="Numeric"
            Text="{Binding Preco}" />
    </VerticalStackLayout>
</ContentPage>